/**index.wxss**/
.swiper{
  width: 100%;
  height: 200px;
}
.swiper-item-image{
  width: 100%;
  transform: translateY(-30px);
}

.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120px;
  width: 100%;
  background-color: #323232;
  border-bottom: 1px #f2f2f2 solid;
}
.item-left{
  width: 100px;
  height: 100px;
  margin-left: 10px;
}
.item-image{
  width: 100%;
  height: 100%;
}
.item-center{
  color: #f2f2f2;
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-top: 15px;
  margin-left: 5px;
  justify-content: flex-start;
}
.item-right{
  width: 60px;
  height: 60px;
  margin-right: 10px;
}
.item-srcoll{
  height: 480px;
}